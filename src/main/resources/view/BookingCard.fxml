<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      spacing="5">
    <padding>
        <Insets top="15" right="10" bottom="15" left="10" />
    </padding>

    <HBox spacing="10">
        <Label fx:id="bookingId" text="Booking ID" />
        <Label fx:id="bookingDate" text="Date" />
        <Label fx:id="pax" text="Pax" />
        <Label fx:id="remarks" text="Remarks" />
    </HBox>

    <HBox spacing="10">
        <Label fx:id="bookingPerson" text="Person" />
        <Label fx:id="phoneNumber" text="Phone" />
    </HBox>

</VBox>
